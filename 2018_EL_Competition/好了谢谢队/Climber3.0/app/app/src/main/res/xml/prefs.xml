<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.preference.PreferenceScreen
        xmlns:android = "http://schemas.android.com/apk/res/android">

    <android.support.v7.preference.PreferenceCategory
    >

        <android.support.v7.preference.SwitchPreferenceCompat
                android:key = "remind"
                android:title = "登顶后是否提醒"
                android:summary = "选中后登顶时将震动提醒"
                android:defaultValue = "false" />
        <android.support.v7.preference.SwitchPreferenceCompat
                android:key = "alwaysLight"
                android:title = "是否保持屏幕常亮"
                android:summary = "选中后将保持屏幕常亮"
                android:defaultValue = "false" />


    </android.support.v7.preference.PreferenceCategory>
    <android.support.v7.preference.PreferenceCategory
            android:title = "关于">
        <android.support.v7.preference.PreferenceScreen
                android:key = "key_3"
                android:title = "联系我们"
                android:summary = "欢迎提供反馈意见">
            <intent
                    android:action = "android.intent.action.MAIN"
                    android:targetPackage = "com.hlxx.climber"
                    android:targetClass = "com.hlxx.climber.firstpage.setting.ContactUsActivity" />

        </android.support.v7.preference.PreferenceScreen>
        <android.support.v7.preference.PreferenceScreen
                android:key = "key_4"
                android:title = "版本更新"
                android:summary = "获取新版本">


        </android.support.v7.preference.PreferenceScreen>

    </android.support.v7.preference.PreferenceCategory>

</android.support.v7.preference.PreferenceScreen>