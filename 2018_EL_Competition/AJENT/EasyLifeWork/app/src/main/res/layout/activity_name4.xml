<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_name4"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/guoyuan">

    <TextView
        android:text="特殊称号："
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/textView20"
        android:textSize="30sp" />

    <Button
        android:text="上一页"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button10"
        android:onClick="back"
        android:background="#00000000"
        android:layout_alignParentBottom="true"
        android:layout_toLeftOf="@+id/textView25"
        android:layout_toStartOf="@+id/textView25" />

    <TextView
        android:text="(花费5个猕猴桃）"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView25"
        android:textSize="25sp"
        android:gravity="center"
        android:layout_marginRight="65dp"
        android:layout_marginEnd="65dp"
        android:layout_above="@+id/button10"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="39dp" />

    <ImageView
        app:srcCompat="@drawable/mihoutaow"
        android:id="@+id/imageView11"
        android:layout_height="170dp"
        android:layout_width="170dp"
        android:layout_marginBottom="19dp"
        android:layout_above="@+id/textView21"
        android:layout_alignLeft="@+id/textView25"
        android:layout_alignStart="@+id/textView25"
        android:layout_marginLeft="13dp"
        android:layout_marginStart="13dp" />

    <Button
        android:text="兑换"
        android:id="@+id/button22"
        android:textSize="20sp"
        android:gravity="center"
        android:onClick="kc"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_above="@+id/textView25"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="13dp" />

    <TextView
        android:text="奇异果王"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView21"
        android:textSize="30sp"
        android:gravity="center"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/kd"
        android:textSize="20sp"
        android:gravity="center"

        android:layout_below="@+id/textView21"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
