<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/guoyuan">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="56dp"
        android:id="@+id/linearLayout2">

    </LinearLayout>

    <TextView
        android:text="欢迎来到水果世界"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView"
        android:textSize="35sp"
        android:layout_marginTop="40dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="60dp"
        android:id="@+id/button4"
        android:textSize="30sp"
        android:layout_height="60dp"
        android:onClick="change"
        android:background="@drawable/huolongguo"
        android:layout_above="@+id/textView63"
        android:layout_alignRight="@+id/textView61"
        android:layout_alignEnd="@+id/textView61" />

    <TextView
        android:text="水果抽奖"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView64"
        android:textSize="20sp"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/button5"
        android:layout_alignEnd="@+id/button5" />

    <TextView
        android:text="兑换水果"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView63"
        android:textSize="20sp"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/button4"
        android:layout_alignEnd="@+id/button4" />

    <ImageView
        android:layout_width="200dp"
        android:layout_height="300dp"
        app:srcCompat="@drawable/fruit"
        android:id="@+id/imageView43"
        android:layout_marginTop="16dp"
        android:layout_alignTop="@+id/textView"
        android:layout_toLeftOf="@+id/button3"
        android:layout_toStartOf="@+id/button3" />

    <Button
        android:layout_width="60dp"
        android:id="@+id/button5"
        android:textSize="30sp"
        android:layout_height="60dp"
        android:onClick="luckdraw"
        android:background="@drawable/mihoutao"
        android:layout_above="@+id/textView64"
        android:layout_alignRight="@+id/textView62"
        android:layout_alignEnd="@+id/textView62" />

    <ImageView
        android:layout_width="64dp"
        android:layout_height="64dp"
        app:srcCompat="@drawable/xigua"
        android:id="@+id/imageView46"
        android:onClick="goback"
        android:layout_above="@+id/button4"
        android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/button2"
        android:layout_weight="0.46"
        android:textSize="30sp"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:onClick="go"
        android:background="@drawable/apple"
        android:layout_above="@+id/imageView46"
        android:layout_alignLeft="@+id/textView"
        android:layout_alignStart="@+id/textView" />

    <TextView
        android:text="兑换称号"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView62"
        android:textSize="20sp"
        android:layout_below="@+id/button3"
        android:layout_alignRight="@+id/button3"
        android:layout_alignEnd="@+id/button3" />

    <TextView
        android:text="返回主页"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView66"
        android:textSize="20sp"
        android:onClick="goback"
        android:layout_alignTop="@+id/button4"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="60dp"
        android:id="@+id/button3"
        android:textSize="30sp"
        android:layout_height="60dp"
        android:onClick="Go"
        android:background="@drawable/lemon"
        android:layout_above="@+id/imageView46"
        android:layout_alignRight="@+id/textView"
        android:layout_alignEnd="@+id/textView" />

    <TextView
        android:text="查看水果"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView61"
        android:textSize="20sp"
        android:layout_below="@+id/button2"
        android:layout_alignRight="@+id/button2"
        android:layout_alignEnd="@+id/button2" />

</RelativeLayout>
