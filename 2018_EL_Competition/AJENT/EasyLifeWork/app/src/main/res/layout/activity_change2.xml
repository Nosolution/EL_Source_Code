<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_change2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/guoyuan">

    <TextView
        android:text="水果兑换"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/textView38"
        android:textSize="50sp" />

    <TextView
        android:text="+"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView40"
        android:textSize="40sp"
        android:layout_alignBottom="@+id/textView41"
        android:layout_toRightOf="@+id/imageView29"
        android:layout_toEndOf="@+id/imageView29" />

    <TextView
        android:text="1个"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView42"
        android:textSize="30sp"
        android:layout_alignBottom="@+id/c1"
        android:layout_alignRight="@+id/textView38"
        android:layout_alignEnd="@+id/textView38" />

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:srcCompat="@drawable/xigua"
        android:id="@+id/imageView34"
        android:layout_below="@+id/imageView33"
        android:layout_alignLeft="@+id/imageView31"
        android:layout_alignStart="@+id/imageView31"
        android:layout_marginTop="29dp" />

    <ImageView
        android:layout_width="70dp"
        android:layout_height="70dp"
        app:srcCompat="@drawable/lizi"
        android:id="@+id/imageView33"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/textView42"
        android:layout_toEndOf="@+id/textView42" />

    <Button
        android:text="兑换"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:id="@+id/c2"
        android:onClick="c2"
        android:layout_alignTop="@+id/imageView34"
        android:layout_toLeftOf="@+id/textView44"
        android:layout_toStartOf="@+id/textView44"
        android:layout_marginTop="16dp" />

    <TextView
        android:text="1个"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView46"
        android:textSize="30sp"
        android:layout_alignBottom="@+id/c2"
        android:layout_centerHorizontal="true" />

    <Button
        android:text="返回"
        android:layout_width="50dp"
        android:layout_height="60dp"
        android:id="@+id/button36"
        android:onClick="back"
        android:background="#00000000"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:text="前进"
        android:layout_width="50dp"
        android:layout_height="60dp"
        android:id="@+id/button35"
        android:textSize="14sp"
        android:onClick="next"
        android:background="#00000000"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:srcCompat="@drawable/huolongguo"
        android:id="@+id/imageView31"
        android:layout_marginRight="14dp"
        android:layout_marginEnd="14dp"
        android:layout_above="@+id/imageView33"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <ImageView
        android:layout_width="70dp"
        android:layout_height="70dp"
        app:srcCompat="@drawable/lemon"
        android:id="@+id/imageView29"
        android:layout_alignRight="@+id/c1"
        android:layout_alignEnd="@+id/c1"
        android:layout_alignTop="@+id/imageView30" />

    <Button
        android:text="兑换"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:id="@+id/c1"
        android:onClick="c1"
        android:layout_marginBottom="19dp"
        android:layout_above="@+id/imageView33"
        android:layout_alignRight="@+id/imageView32"
        android:layout_alignEnd="@+id/imageView32" />

    <TextView
        android:text="4个"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView41"
        android:textSize="30sp"
        android:layout_above="@+id/imageView31"
        android:layout_toRightOf="@+id/textView40"
        android:layout_toEndOf="@+id/textView40" />

    <TextView
        android:text="4个"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView39"
        android:textSize="30sp"
        android:layout_alignBottom="@+id/textView40"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ImageView
        android:layout_width="70dp"
        android:layout_height="70dp"
        app:srcCompat="@drawable/lemon"
        android:id="@+id/imageView32"
        android:layout_below="@+id/c1"
        android:layout_toRightOf="@+id/textView43"
        android:layout_toEndOf="@+id/textView43"
        android:layout_marginTop="11dp" />

    <TextView
        android:text="5个"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView45"
        android:textSize="30sp"
        android:layout_alignBottom="@+id/imageView33"
        android:layout_toRightOf="@+id/textView44"
        android:layout_toEndOf="@+id/textView44" />

    <TextView
        android:text="+"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView44"
        android:textSize="40sp"
        android:layout_alignBottom="@+id/textView45"
        android:layout_toRightOf="@+id/imageView32"
        android:layout_toEndOf="@+id/imageView32" />

    <TextView
        android:text="5个"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView43"
        android:textSize="30sp"
        android:layout_alignBaseline="@+id/textView44"
        android:layout_alignBottom="@+id/textView44"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ImageView
        android:layout_width="70dp"
        android:layout_height="70dp"
        app:srcCompat="@drawable/lizi"
        android:id="@+id/imageView30"
        android:layout_marginTop="15dp"
        android:layout_below="@+id/textView38"
        android:layout_toRightOf="@+id/textView46"
        android:layout_toEndOf="@+id/textView46" />


</RelativeLayout>
