<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#7793cb"
    tools:context=".calendar">

    <TextView
        android:id="@+id/square_bg1"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="0dp"
        android:background="#36548f" />

    <TextView
        android:id="@+id/square_bg2"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="80dp"
        android:background="#bbcae7" />

    <TextView
        android:id="@+id/square_bg3"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="128dp"
        android:background="#a0b5d9" />

    <TextView
        android:id="@+id/l_1"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="128dp"
        android:background="#384e7c" />

    <TextView
        android:id="@+id/l_2"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="170dp"
        android:background="#384e7c" />

    <TextView
        android:id="@+id/square_bg4"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="379dp"
        android:background="#bbcae7" />

    <TextView
        android:id="@+id/l_3"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="378dp"
        android:background="#384e7c" />

    <ImageView
        android:id="@+id/ivCal_buttomPic"
        android:layout_width="428dp"
        android:layout_height="175dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="-36dp"
        app:srcCompat="@drawable/dev_buttom_pic" />

    <CalendarView
        android:id="@+id/cd_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="70dp"
        />

    <TextView
        android:id="@+id/textView19"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/square_bg1"
        android:layout_marginBottom="18dp"
        android:layout_centerHorizontal="true"
        android:textSize="24sp"
        android:textColor="#ffe992"
        android:text="日历与日程" />

    <TextView
        android:id="@+id/description_cal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="5dp"
        android:textColor="#c1ad5c"
        android:textSize="12sp"
        android:text="* 点选日期以设置日程" />

</RelativeLayout>