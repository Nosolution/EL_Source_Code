<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/settings_bg">

    <EditText
        android:id="@+id/et_1"
        android:layout_width="match_parent"
        android:layout_height="425dp"
        android:hint=" 新增日程"
        android:layout_centerHorizontal="true"
        android:textColor="#ffe88d"
        android:textColorHint="#7e7346"
        android:textCursorDrawable="@null"
        android:layout_marginTop="110dp"
        android:gravity="top"
        android:textAlignment="gravity"
        android:background="@drawable/textedit_border"
        android:padding="8dp"
        />

    <TextView
        android:id="@+id/tv_add_thing"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center"
        android:layout_marginTop="20dp"
        android:text="添加日程"
        android:textColor="#fce072"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/sp_1"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/tv_add_thing"
        android:layout_marginTop="4dp"
        android:background="@color/line_split" />

    <TextView
        android:id="@+id/sp_2"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/tv_add_thing"
        android:layout_marginTop="468dp"
        android:background="@color/line_split" />

    <ImageButton
        android:id="@+id/ib_add_back"
        android:layout_width="27dp"
        android:layout_height="27dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="32dp"
        android:layout_marginLeft="25dp"
        android:layout_marginStart="25dp"
        android:background="@android:color/transparent"
        android:scaleType="fitXY"
        android:src="@drawable/back"/>

    <Button
        android:id="@+id/btn_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/et_1"
        android:layout_marginTop="2dp"
        android:layout_marginLeft="260dp"
        android:layout_marginStart="260dp"
        android:textColor="#fddb53"
        android:textSize="15sp"
        android:background="@android:color/transparent"
        android:text="确认添加" />

    <Button
        android:id="@+id/btn_clear_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/et_1"
        android:layout_marginTop="2dp"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="10dp"
        android:textColor="#fddb53"
        android:textSize="15sp"
        android:background="@android:color/transparent"
        android:text="清空内容" />

    <TextView
        android:id="@+id/current_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/sp_1"
        android:layout_marginTop="8dp"
        android:layout_marginStart="12dp"
        android:layout_marginLeft="12dp"
        android:textColor="#ffeca2"
        android:textSize="14sp"
        android:text="当前时间" />
</RelativeLayout>