        android:layout_marginLeft="20dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="QQ：624707004"
        android:textSize="25dp"
        android:textColor="#000000"
        android:layout_marginTop="430dp"
