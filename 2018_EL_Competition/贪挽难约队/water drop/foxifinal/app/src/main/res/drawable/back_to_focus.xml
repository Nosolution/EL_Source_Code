<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="false">
        <!--//设置当状态为未点击时的样式-->
        <shape>
            <!--//在shaoe内编写自定义的样式-->
            <solid android:color="#c0ba000a" />
            <!--//填充的颜色-->
            <corners android:radius="20dp" />
            <!--//边角弧度-->
            <size
                android:width="300dp"
                android:height="30dp" />
        </shape>
    </item>
    <item android:state_pressed="true">
        <!--//同理，该处是设置点击状态时的样式-->
        <shape>
            <solid android:color="#80ba000a" />
            <corners android:radius="250dp" />
            <size
                android:width="300dp"
                android:height="30dp" />
        </shape>
    </item>

</selector>