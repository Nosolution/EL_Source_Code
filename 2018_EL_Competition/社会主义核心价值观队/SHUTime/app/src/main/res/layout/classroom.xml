<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/c1">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/room_number"
            android:layout_width="100dp"
            android:layout_height="30dp" />

        <Button
            android:id="@+id/one"
            android:layout_width="70dp"
            android:layout_height="30dp"
            android:layout_alignEnd="@+id/room_number"
            android:layout_alignRight="@+id/room_number"
            android:layout_below="@+id/exit"
            android:layout_marginTop="85dp"
            android:background="#00000000"
            android:gravity=""
            android:text=""
            android:textAllCaps="false"
            android:textColor="@color/colorWhite" />

        <Button
            android:id="@+id/two"
            android:layout_width="70dp"
            android:layout_height="30dp"
            android:layout_alignLeft="@+id/one"
            android:layout_alignStart="@+id/one"
            android:layout_below="@+id/one"
            android:background="#00000000"
            android:gravity=""
            android:text=""
            android:textAllCaps="false"
            android:textColor="@color/colorWhite" />

        <Button
            android:id="@+id/three"
            android:layout_width="70dp"
            android:layout_height="30dp"
            android:layout_alignEnd="@+id/two"
            android:layout_alignRight="@+id/two"
            android:layout_below="@+id/two"
            android:background="#00000000"
            android:gravity=""
            android:text=""
            android:textAllCaps="false"
            android:textColor="@color/colorWhite" />

        <Button
            android:id="@+id/four"
            android:layout_width="70dp"
            android:layout_height="30dp"
            android:layout_alignEnd="@+id/three"
            android:layout_alignRight="@+id/three"
            android:layout_below="@+id/three"
            android:background="#00000000"
            android:gravity=""
            android:text=""
            android:textAllCaps="false"
            android:textColor="@color/colorWhite" />

        <Button
            android:id="@+id/exit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:text="退出教室" />


        <Button
            android:id="@+id/button"
            style="@android:style/Widget.DeviceDefault.Button"
            android:layout_width="100dp"
            android:layout_height="100dp"

            android:layout_marginTop="152dp"
            android:layout_centerHorizontal="true"
            android:background="@drawable/remove_button2"
            android:text="Start"
            android:textColor="#FFF8DC" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="177dp"
            android:layout_height="184dp"


            android:layout_marginTop="110dp"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="24dp"
            android:adjustViewBounds="false"
            android:rotation="270"
            android:scaleType="center"
            android:src="@drawable/background2" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="33dp"
            android:layout_height="24dp"
            android:layout_marginTop="130dp"
            android:layout_marginLeft="170dp"
            android:text="Ⅻ"
            android:textAllCaps="false"
            android:textColor="#292929"
            />

        <Button
            android:id="@+id/t0"
            style="@android:style/Widget.DeviceDefault.Button.Borderless"
            android:layout_width="21dp"
            android:layout_height="23dp"
            android:layout_marginTop="130dp"
            android:layout_marginLeft="170dp"
            android:textColor="#CFCFCF" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="56dp"
            android:layout_height="125dp"
            android:layout_marginTop="190dp"
            android:layout_marginLeft="239dp"
            android:text="Ⅲ"
            android:textAppearance="@android:style/TextAppearance"
            android:textColor="#292929"
            android:textSize="14sp"

            />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="62dp"
            android:layout_height="46dp"
            android:layout_marginTop="188dp"
            android:layout_marginLeft="110dp"

            android:text="Ⅸ"
            android:textAppearance="@android:style/TextAppearance"
            android:textColor="#292929"
            android:textSize="14sp" />

        <Button
            android:id="@+id/t15"
            android:layout_width="10dp"
            android:layout_height="19dp"
            android:layout_marginTop="190dp"
            android:layout_marginLeft="239dp"
            />

        <Button
            android:id="@+id/t45"
            style="@android:style/Widget.DeviceDefault.Button.Borderless"
            android:layout_width="17dp"
            android:layout_height="16dp"
            android:layout_marginTop="188dp"
            android:layout_marginLeft="110dp"

            />

        <Button
            android:id="@+id/t30"
            style="@android:style/Widget.DeviceDefault.Button.Borderless"
            android:layout_width="18dp"
            android:layout_height="19dp"
            android:layout_marginTop="255dp"
            android:layout_marginLeft="173dp"
            android:layout_centerHorizontal="true"
            />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="15dp"
            android:layout_height="27dp"
            android:layout_marginTop="255dp"
            android:layout_marginLeft="173dp"
            android:text="Ⅵ"

            android:textAllCaps="false"
            android:textColor="#292929" />

    </RelativeLayout>
</LinearLayout>