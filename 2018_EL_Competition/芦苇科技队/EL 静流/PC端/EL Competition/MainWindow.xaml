        <Button Name="sign" Content="登陆" FontSize="27" BorderBrush="Purple" Background="Transparent" HorizontalAlignment="Left" Height="39" Margin="447,344,0,0" VerticalAlignment="Top" Width="120" Click="Button_Click_1"/>
        <TextBlock Foreground="White" Name="welusername" Visibility="Hidden" FontSize="30" HorizontalAlignment="Left" Height="42" Margin="71,314,0,0" TextWrapping="Wrap" Text="TextBlock" VerticalAlignment="Top" Width="300"/>
    </Grid>
</Window>
