<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="90dp"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/image_keep"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginStart="70dp"
            android:background="@drawable/keep" />

        <Switch
            android:id="@+id/switch_keep"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginStart="10dp" />

        <ImageView
            android:id="@+id/image_word"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginStart="70dp"
            android:background="@drawable/scallop_word" />

        <Switch
            android:id="@+id/switch_word"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="60dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="8dp">

        <ImageView
            android:id="@+id/image_weibo"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginStart="70dp"
            android:background="@drawable/weibo" />

        <Switch
            android:id="@+id/switch_weibo"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginStart="10dp"/>

        <ImageView
            android:id="@+id/image_tim"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginStart="70dp"
            android:background="@drawable/tim" />

        <Switch
            android:id="@+id/switch_tim"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginStart="10dp" />
    </LinearLayout>

</LinearLayout>